<Window x:Class="PSWRDMGR.Views.ControlsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSWRDMGR.Views" xmlns:controls="clr-namespace:PSWRDMGR.Controls" xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" 
        ResizeMode="NoResize" 
        Closing="Window_Closing"
        Title="ControlsWindow" 
        Height="310" Width="580" 
        Background="{DynamicResource ContainerBackground}"
        Style="{DynamicResource CustomToolWindowStyle}"
        FontFamily="Consolas">
    <Grid>
        <ListBox FontSize="16" VerticalAlignment="Top">
            <Label Content="CTRL + A    -- Opens the Add Account window"/>
            <Label Content="CTRL + S    -- Saves the account to the default location"/>
            <Label Content="CTRL + E    -- Shows the edit account window"/>
            <Label Content="CTRL + L    -- Loads the account from the default location"/>
            <Label Content="CTRL + Del  -- Deletes selected account"/>
        </ListBox>
    </Grid>
</Window>
